pub fibonacci: (x: Int) -> Int;
def fibonacci (x) = do {
    if (x == 0 or x == 1) {
        x
    } else {
        fibonacci(x - 1) + fibonacci(x - 2)
    }
};

type FibRes = (x: Int, y: Int);
pub better_fibonacci: (x: Int) -> Int;
pvt better_fibonacci_helper: (a: Int, b: Int) -> FibRes;
def better_fibonacci (x) = do {
    if (x == 0 or x == 1) {
        x
    } else {
        val res = better_fibonacci_helper(x, better_fibonacci(x - 1));
        res.y
    }
};
def better_fibonacci_helper (a, b) = do {
    val c = a + b;
    new FibRes(b, c)
};

