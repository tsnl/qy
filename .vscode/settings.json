{    
    "files.associations": {
        "*.qy": "qy"
    },
    "cmake.sourceDirectory": "${workspaceFolder}/qc-build",
    "cmake.cmakePath": "cmake",
    
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [100],
    },
    "[qy]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.rulers": [100],
    },
    "[json][jsonc][json5]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    }
}
