mod vec [Scalar] {

    Vector3 = struct {
        x :: Scalar;
        y :: Scalar;
        z :: Scalar;
    };

    add = (v, w) -> {
        v :: Vector3;
        w :: Vector3;

        Vector3 (
            v.x + w.x,
            v.y + w.y,
            v.z + w.z
        )
    };

}

